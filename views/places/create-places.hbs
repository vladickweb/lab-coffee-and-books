<div class="container mt-5 beige">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-5 text-center">CREATE YOUR PLACE</h2>
            <hr class="mb-5">
            <form action="/places/create" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control rounded-pill" id="name" name="name" placeholder="Enter Place's Name">
                </div>
                <div class="form-group">
                    <label for="type">Type of place</label>
                    <select class="rounded-pill form-control" id="type" name="type">
                        <option disabled selected>Select an option</option>
                        <option value="Coffee Shop">Coffee Shop</option>
                        <option value="Bookstore">Bookstore</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Latitude</label>
                    <input class="form-control rounded-pill" name="lat" type="text" placeholder="Enter Latitude">
                </div>
                <div class="form-group">
                    <label>Longitude</label>
                    <input class="form-control rounded-pill" name="lng" type="text" placeholder="Enter Longitude">
                </div>
                <div class="row justify-content-center">
                <button type="submit" class="btn btn-dark rounded-pill mt-5 button border-dark">CREATE</button>
                </div>
            </form>
        </div>
    </div>
</div>